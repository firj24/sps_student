<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MasaStudiMahasiswa">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/sps" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/rect" />
    <ImageView
        android:id="@+id/profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/foto" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/crim"
        android:text="Mahasiswa"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/masast" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/namamhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="Nama"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nimmhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="NIM"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prodimhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="Program Studi"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/angkatanmhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="Angkatan"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sksmhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="SKS"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ipkmhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="IPK"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yudmhsmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/data"
            android:fontFamily="@font/crimbold"
            android:gravity="start|center"
            android:paddingStart="12dp"
            android:text="Yudisium"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>