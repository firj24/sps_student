<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TambahDataKaprodi">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sps" />
    </FrameLayout>

    <TextView
        android:id="@+id/npm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="NPM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <EditText
        android:id="@+id/inpnpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/tambahdata"
        android:fontFamily="@font/crim"
        android:hint="Masukkan NPM"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="#6D6D6D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npm" />
    <TextView
        android:id="@+id/namakap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:text="Nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpnpm" />
    <EditText
        android:id="@+id/inpnamakap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/namakap"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tambahdata"
        android:layout_marginStart="32dp"
        android:hint="Masukkan nama"
        android:textSize="14dp"
        android:fontFamily="@font/crim"
        android:paddingStart="8dp"
        android:textColorHint="#6D6D6D"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/prodikap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Prodi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpnamakap" />
    <EditText
        android:id="@+id/inpprodikap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/prodikap"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tambahdata"
        android:layout_marginStart="32dp"
        android:hint="Masukkan Prodi"
        android:textSize="14dp"
        android:inputType="text"
        android:fontFamily="@font/crim"
        android:paddingStart="8dp"
        android:textColorHint="#6D6D6D"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/emailkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpprodikap" />
    <EditText
        android:id="@+id/inpemailkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/emailkap"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tambahdata"
        android:layout_marginStart="32dp"
        android:hint="Masukkan Email"
        android:textSize="14dp"
        android:inputType="textEmailAddress"
        android:fontFamily="@font/crim"
        android:paddingStart="8dp"
        android:textColorHint="#6D6D6D"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/passkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpemailkap" />
    <EditText
        android:id="@+id/inppasskap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/passkap"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tambahdata"
        android:layout_marginStart="32dp"
        android:hint="Masukkan password"
        android:inputType="textPassword"
        android:textSize="14dp"
        android:fontFamily="@font/crim"
        android:paddingStart="8dp"
        android:textColorHint="#6D6D6D"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/simkapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/biru"
        android:fontFamily="@font/crimbold"
        android:text="Tambah Data"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inppasskap" />


</androidx.constraintlayout.widget.ConstraintLayout>