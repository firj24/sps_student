<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TambahAKunMhs">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/sps" />
    </FrameLayout>

    <TextView
        android:id="@+id/namamhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Nama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <EditText
        android:id="@+id/inpnamamhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:inputType="textPersonName"
        android:background="@drawable/tambahdata"
        android:fontFamily="@font/crim"
        android:hint="Masukkan nama"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="#6D6D6D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namamhs" />
    <TextView
        android:id="@+id/usernamemhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:fontFamily="@font/crimbold"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpnamamhs" />
    <EditText
        android:id="@+id/inpusernamemhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/usernamemhs"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tambahdata"
        android:layout_marginStart="32dp"
        android:hint="Masukkan username"
        android:textSize="14dp"
        android:fontFamily="@font/crim"
        android:paddingStart="8dp"
        android:textColorHint="#6D6D6D"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/passmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/crimbold"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpusernamemhs" />

    <EditText
        android:id="@+id/inppassmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/tambahdata"
        android:fontFamily="@font/crim"
        android:hint="Masukkan Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="#6D6D6D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passmhs" />

    <TextView
        android:id="@+id/nimmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/crimbold"
        android:text="Nim"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inppassmhs" />

    <EditText
        android:id="@+id/inpnimmhs"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/tambahdata"
        android:fontFamily="@font/crim"
        android:hint="Masukkan Nim"
        android:visibility="gone"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="#6D6D6D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nimmhs" />


    <TextView
        android:id="@+id/ipkmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/crimbold"
        android:visibility="gone"
        android:text="IPK"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpnimmhs" />

    <EditText
        android:id="@+id/inpipkmhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/tambahdata"
        android:fontFamily="@font/crim"
        android:hint="Masukkan IPK"
        android:visibility="gone"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="#6D6D6D"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipkmhs" />

        <TextView
            android:id="@+id/angkatanmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/crimbold"
            android:text="Angkatan"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpsksmhs" />

        <EditText
            android:id="@+id/inpsksmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/tambahdata"
            android:fontFamily="@font/crim"
            android:hint="Masukkan SKS"
            android:visibility="gone"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6D6D6D"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sksmhs" />

        <TextView
            android:id="@+id/sksmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/crimbold"
            android:text="SKS"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpipkmhs" />

        <EditText
            android:id="@+id/inpangkatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/tambahdata"
            android:fontFamily="@font/crim"
            android:hint="Masukkan angkatan"
            android:inputType="number"
            android:visibility="gone"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6D6D6D"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/angkatanmhs" />

        <TextView
            android:id="@+id/prodimhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/crimbold"
            android:text="Prodi"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpangkatan" />

        <EditText
            android:id="@+id/inpprodimhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/tambahdata"
            android:fontFamily="@font/crim"
            android:visibility="gone"
            android:hint="Masukkan prodi"
            android:inputType="text"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6D6D6D"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prodimhs" />

        <TextView
            android:id="@+id/yudimhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/crimbold"
            android:text="Yudisium"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpprodimhs" />

        <EditText
            android:id="@+id/inpyudimhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:background="@drawable/tambahdata"
            android:fontFamily="@font/crim"
            android:visibility="gone"
            android:hint="Masukkan yudisium"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6D6D6D"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yudimhs" />

        <TextView
            android:id="@+id/noHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/crimbold"
            android:text="No HP"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpyudimhs" />

        <EditText
            android:id="@+id/inpnoHpMhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/tambahdata"
            android:fontFamily="@font/crim"
            android:hint="Masukkan No HP"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="@color/black"
            android:textColorHint="#6D6D6D"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noHp" />

        <Button
            android:id="@+id/tambahakunmhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/biru"
            android:fontFamily="@font/crimbold"
            android:text="Tambah Akun"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inpnoHpMhs" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
