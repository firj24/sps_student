<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namamhsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input"
                android:fontFamily="@font/crimbold"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Nama"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/nimmhsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input"
                android:fontFamily="@font/crimbold"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="Nim"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/namajurnal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/input"
                android:fontFamily="@font/crimbold"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:text="nama_jurnal"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttondownloadjurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Download"
                    android:textAllCaps="false"

                    />

                <Button
                    android:id="@+id/aksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Aksi"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toEndOf="@+id/buttondownloadjurnal"
                    app:layout_constraintTop_toBottomOf="@+id/namajurnal" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>